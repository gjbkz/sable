{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "removeComments": true,
        "declaration": true,
        "sourceMap": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./lib"
    },
    "include": [
        "./src/**/*.ts"
    ]
}
