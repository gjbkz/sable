{
    "name": "sable",
    "version": "0.5.14",
    "description": "Starts a server and a file watcher",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/gjbkz"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=12"
    },
    "repository": "https://github.com/gjbkz/sable",
    "main": "./lib/index.js",
    "bin": {
        "sable": "./bin/sable"
    },
    "files": [
        "lib"
    ],
    "scripts": {
        "lint": "eslint --ext .ts src",
        "build": "tsc --project tsconfig.build.json",
        "test": "ava",
        "version": "run-s version:changelog version:add",
        "version:changelog": "npx @nlib/changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "dependencies": {
        "commander": "8.3.0",
        "connect": "3.7.0",
        "middleware-static-livereload": "1.2.21"
    },
    "devDependencies": {
        "@nlib/eslint-config": "3.18.0",
        "@nlib/githooks": "0.1.0",
        "@nlib/lint-commit": "0.1.8",
        "@nlib/nodetool": "1.0.0",
        "@types/connect": "3.4.35",
        "@types/node": "17.0.36",
        "@types/node-fetch": "2.6.1",
        "@typescript-eslint/eslint-plugin": "5.27.0",
        "@typescript-eslint/parser": "5.27.0",
        "ava": "3.15.0",
        "chokidar": "3.5.3",
        "eslint": "8.16.0",
        "lint-staged": "12.4.2",
        "node-fetch": "2.6.7",
        "npm-run-all": "4.1.5",
        "ts-node": "10.8.0",
        "typescript": "4.7.2"
    },
    "eslintConfig": {
        "extends": [
            "@nlib/eslint-config"
        ],
        "ignorePatterns": [
            "test/src",
            "test/test-*"
        ],
        "env": {
            "es6": true,
            "node": true
        },
        "rules": {
            "@nlib/no-globals": "off"
        }
    },
    "ava": {
        "extensions": [
            "ts",
            "js"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "test/index.ts"
        ]
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ],
        "*.ts": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
