{
    "name": "sable",
    "version": "0.5.14",
    "description": "Starts a server and a file watcher",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/gjbkz"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=12"
    },
    "repository": "https://github.com/gjbkz/sable",
    "main": "./lib/index.js",
    "bin": {
        "sable": "./bin/sable"
    },
    "files": [
        "lib"
    ],
    "scripts": {
        "lint": "eslint --ext .ts src",
        "build": "tsc --project tsconfig.build.json",
        "test": "ava",
        "version": "run-s version:changelog version:add",
        "version:changelog": "npx @nlib/changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "dependencies": {
        "commander": "9.4.0",
        "connect": "3.7.0",
        "middleware-static-livereload": "1.2.21"
    },
    "devDependencies": {
        "@nlib/eslint-config": "3.19.4",
        "@nlib/githooks": "0.1.0",
        "@nlib/lint-commit": "0.2.0",
        "@types/connect": "3.4.35",
        "@types/node": "18.7.8",
        "@types/node-fetch": "2.6.2",
        "@typescript-eslint/eslint-plugin": "5.33.1",
        "@typescript-eslint/parser": "5.33.1",
        "ava": "4.3.1",
        "chokidar": "3.5.3",
        "eslint": "8.22.0",
        "lint-staged": "13.0.3",
        "node-fetch": "3.2.10",
        "npm-run-all": "4.1.5",
        "ts-node": "10.9.1",
        "typescript": "4.7.4"
    },
    "eslintConfig": {
        "extends": [
            "@nlib/eslint-config"
        ],
        "ignorePatterns": [
            "test/src",
            "test/test-*"
        ],
        "env": {
            "es6": true,
            "node": true
        },
        "rules": {
            "@nlib/no-globals": "off"
        }
    },
    "ava": {
        "extensions": [
            "ts",
            "js"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "test/index.ts"
        ]
    },
    "lint-staged": {
        "*!(.d).{ts,tsx,js,mjs,cjs,jsx}": "eslint"
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
