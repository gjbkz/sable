{
    "name": "sable",
    "version": "0.5.9",
    "description": "Starts a server and a file watcher",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=8"
    },
    "repository": "kei-ito/sable",
    "main": "./lib/index.js",
    "bin": {
        "sable": "./bin/sable"
    },
    "scripts": {
        "lint": "eslint --ext .ts src",
        "build": "tsc",
        "test": "ava -v test/index.ts",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "run-s version:changelog version:add",
        "prepack": "remove-sourcemap lib"
    },
    "dependencies": {
        "@types/connect": "3.4.33",
        "commander": "6.2.0",
        "connect": "3.7.0",
        "middleware-static-livereload": "1.2.16"
    },
    "devDependencies": {
        "@commitlint/cli": "11.0.0",
        "@commitlint/config-conventional": "11.0.0",
        "@nlib/lint": "3.17.2",
        "@nlib/remove-sourcemap": "3.17.3",
        "@types/node": "14.14.10",
        "@typescript-eslint/eslint-plugin": "4.9.0",
        "@typescript-eslint/parser": "4.9.0",
        "ava": "3.13.0",
        "chokidar": "3.4.3",
        "conventional-changelog-cli": "2.1.1",
        "eslint": "7.15.0",
        "husky": "4.3.5",
        "lint-staged": "10.5.3",
        "npm-run-all": "4.1.5",
        "ts-node": "9.1.0",
        "typescript": "4.0.5"
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        },
        "globals": {
            "URL": false
        }
    },
    "ava": {
        "extensions": [
            "ts",
            "js"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
