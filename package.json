{
    "name": "sable",
    "version": "0.5.10",
    "description": "Starts a server and a file watcher",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=8"
    },
    "repository": "kei-ito/sable",
    "main": "./lib/index.js",
    "bin": {
        "sable": "./bin/sable"
    },
    "scripts": {
        "lint": "eslint --ext .ts src",
        "build": "tsc",
        "test": "ava -v test/index.ts",
        "version": "run-s version:changelog version:add",
        "version:changelog": "nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "dependencies": {
        "@types/connect": "3.4.34",
        "commander": "6.2.1",
        "connect": "3.7.0",
        "middleware-static-livereload": "1.2.17"
    },
    "devDependencies": {
        "@nlib/changelog": "0.1.9",
        "@nlib/eslint-config": "3.17.16",
        "@nlib/lint-commit": "0.1.3",
        "@types/node": "14.14.21",
        "@types/node-fetch": "2.5.8",
        "@typescript-eslint/eslint-plugin": "4.15.0",
        "@typescript-eslint/parser": "4.15.0",
        "ava": "3.15.0",
        "chokidar": "3.5.1",
        "eslint": "7.19.0",
        "husky": "4.3.8",
        "lint-staged": "10.5.4",
        "node-fetch": "2.6.1",
        "npm-run-all": "4.1.5",
        "ts-node": "9.1.1",
        "typescript": "4.1.5"
    },
    "ava": {
        "extensions": [
            "ts",
            "js"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "eslintConfig": {
        "ignorePatterns": [
            "test/src",
            "test/test-*"
        ],
        "extends": [
            "@nlib/eslint-config"
        ],
        "env": {
            "es6": true,
            "node": true
        },
        "rules": {
            "@nlib/no-globals": "off"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "nlib-lint-commit --input HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ],
        "*.ts": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
