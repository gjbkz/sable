{
	"name": "sable",
	"version": "0.5.17",
	"description": "Starts a server and a file watcher",
	"author": {
		"name": "Kei Ito",
		"email": "kei.itof@gmail.com",
		"url": "https://github.com/gjbkz"
	},
	"license": "Apache-2.0",
	"engines": {
		"node": ">=14"
	},
	"repository": "https://github.com/gjbkz/sable",
	"type": "module",
	"main": "./esm/index.mjs",
	"bin": {
		"sable": "./esm/cli.mjs"
	},
	"exports": {
		".": {
			"types": "./types/index.d.ts",
			"import": "./esm/index.mjs",
			"require": "./cjs/index.cjs"
		}
	},
	"files": [
		"esm",
		"cjs",
		"types"
	],
	"scripts": {
		"lint": "npx @biomejs/biome lint",
		"build": "run-s build:*",
		"build:typedef": "tsc --project tsconfig.typedef.json",
		"build:code": "node build.ts",
		"test": "node --test test/index.mjs",
		"version": "run-s version:changelog version:add",
		"version:changelog": "npx @nlib/changelog --output CHANGELOG.md",
		"version:add": "git add ."
	},
	"dependencies": {
		"commander": "14.0.1",
		"connect": "3.7.0",
		"middleware-static-livereload": "1.4.3"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@types/connect": "3.4.38",
		"@types/node": "24.4.0",
		"esbuild": "0.25.9",
		"npm-run-all": "4.1.5",
		"typescript": "5.9.2"
	},
	"renovate": {
		"extends": [
			"github>nlibjs/renovate-config"
		]
	}
}
