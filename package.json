{
    "name": "sable",
    "version": "0.5.3",
    "description": "Starts a server and a file watcher",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=8"
    },
    "repository": "kei-ito/sable",
    "main": "./lib/index.js",
    "bin": {
        "sable": "./bin/sable"
    },
    "scripts": {
        "lint": "eslint --ext .ts src",
        "build": "tsc",
        "test": "ava -v test/index.ts",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "run-s version:changelog version:add"
    },
    "dependencies": {
        "commander": "^3.0.0",
        "connect": "3.7.0",
        "middleware-static-livereload": "^1.2.6"
    },
    "devDependencies": {
        "@commitlint/cli": "8.1.0",
        "@commitlint/config-conventional": "8.1.0",
        "@nlib/lint": "^3.13.3",
        "@types/connect": "3.4.32",
        "@types/node": "12.7.5",
        "@typescript-eslint/eslint-plugin": "^2.0.0",
        "@typescript-eslint/parser": "^2.0.0",
        "ava": "2.4.0",
        "chokidar": "3.1.0",
        "conventional-changelog-cli": "2.0.23",
        "eslint": "6.4.0",
        "husky": "^3.0.4",
        "lint-staged": "9.2.5",
        "npm-run-all": "4.1.5",
        "ts-node": "8.4.1",
        "typescript": "3.6.3"
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        },
        "globals": {
            "URL": false
        }
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}
