{
    "name": "sable",
    "version": "0.5.14",
    "description": "Starts a server and a file watcher",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/gjbkz"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=14"
    },
    "repository": "https://github.com/gjbkz/sable",
    "type": "module",
    "main": "./lib/index.mjs",
    "bin": {
        "sable": "./lib/cli.mjs"
    },
    "files": [
        "lib"
    ],
    "scripts": {
        "lint": "eslint --ext .ts src",
        "build": "run-s build:*",
        "build:tsc": "tsc",
        "build:esmify": "nlib-esmify \"./lib/**/*\"",
        "build:chmod": "chmod +x lib/cli.mjs",
        "test": "ava",
        "version": "run-s version:changelog version:add",
        "version:changelog": "nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "dependencies": {
        "commander": "9.5.0",
        "connect": "3.7.0",
        "middleware-static-livereload": "1.2.21"
    },
    "devDependencies": {
        "@nlib/changelog": "0.2.4",
        "@nlib/eslint-config": "3.19.6",
        "@nlib/esmify": "0.3.3",
        "@nlib/githooks": "0.1.0",
        "@nlib/lint-commit": "0.2.0",
        "@types/connect": "3.4.35",
        "@types/node": "18.14.2",
        "@types/node-fetch": "2.6.2",
        "@typescript-eslint/eslint-plugin": "5.54.0",
        "@typescript-eslint/parser": "5.54.0",
        "ava": "4.3.3",
        "chokidar": "3.5.3",
        "eslint": "8.35.0",
        "lint-staged": "13.1.2",
        "node-fetch": "3.3.0",
        "npm-run-all": "4.1.5",
        "ts-node": "10.9.1",
        "typescript": "4.9.5"
    },
    "eslintConfig": {
        "extends": [
            "@nlib/eslint-config"
        ],
        "env": {
            "node": true
        },
        "rules": {
            "@nlib/no-globals": "off"
        }
    },
    "ava": {
        "files": [
            "test/index.mjs"
        ]
    },
    "lint-staged": {
        "*!(.d).{ts,tsx,js,mjs,cjs,jsx}": "eslint"
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
