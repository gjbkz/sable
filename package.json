{
    "name": "sable",
    "version": "0.5.14",
    "description": "Starts a server and a file watcher",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/gjbkz"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=14"
    },
    "repository": "https://github.com/gjbkz/sable",
    "type": "module",
    "main": "./lib/index.mjs",
    "bin": {
        "sable": "./lib/cli.mjs"
    },
    "files": [
        "lib"
    ],
    "scripts": {
        "lint": "npx @biomejs/biome lint",
        "build": "run-s build:*",
        "build:tsc": "tsc",
        "build:esmify": "nlib-esmify \"./lib/**/*\"",
        "build:chmod": "chmod +x lib/cli.mjs",
        "test": "node --test test/index.mjs",
        "version": "run-s version:changelog version:add",
        "version:changelog": "nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "dependencies": {
        "commander": "9.5.0",
        "connect": "3.7.0",
        "middleware-static-livereload": "1.3.0"
    },
    "devDependencies": {
        "@biomejs/biome": "1.8.3",
        "@nlib/changelog": "0.3.1",
        "@nlib/esmify": "0.3.3",
        "@nlib/githooks": "0.2.0",
        "@nlib/lint-commit": "1.0.1",
        "@types/connect": "3.4.38",
        "@types/node": "22.5.4",
        "npm-run-all": "4.1.5",
        "typescript": "5.5.4"
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
