{
    "name": "sable",
    "version": "0.5.9",
    "description": "Starts a server and a file watcher",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=8"
    },
    "repository": "kei-ito/sable",
    "main": "./lib/index.js",
    "bin": {
        "sable": "./bin/sable"
    },
    "scripts": {
        "lint": "eslint --ext .ts src",
        "build": "tsc",
        "test": "ava -v test/index.ts",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "run-s version:changelog version:add",
        "prepack": "remove-sourcemap lib"
    },
    "dependencies": {
        "@types/connect": "^3.4.32",
        "commander": "^5.0.0",
        "connect": "3.7.0",
        "middleware-static-livereload": "^1.2.14"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.0.1",
        "@commitlint/config-conventional": "9.1.1",
        "@nlib/lint": "^3.17.2",
        "@nlib/remove-sourcemap": "^3.17.2",
        "@types/node": "^14.0.14",
        "@typescript-eslint/eslint-plugin": "^3.4.0",
        "@typescript-eslint/parser": "^3.4.0",
        "ava": "3.10.0",
        "chokidar": "^3.4.0",
        "conventional-changelog-cli": "^2.0.34",
        "eslint": "7.4.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "npm-run-all": "4.1.5",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.5"
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        },
        "globals": {
            "URL": false
        }
    },
    "ava": {
        "extensions": [
            "ts",
            "js"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}
